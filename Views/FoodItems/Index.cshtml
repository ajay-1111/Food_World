@model List<Food_World.Models.FoodItemsViewModel>

<div class="container">
    <div class="row mt-5 mb-3">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var product in Model)
            {
                <div class="col-sm-12 mb-4">
                    <div class="card">
                        <table border="0">
                            <tr>
                                <td style="width:20%; height:40px">
                                    <img src="fooditems_images/@product.ImageUrl" class="card-img-top" alt="Product Image">
                                </td>
                                <td style="width:65%">
                                    <div class="card-body">
                                        <h5 class="card-title">@product.ItemName</h5>
                                        <p class="card-text">Price: $@product.Cost</p>
                                        <p class="card-text">Rating: @product.Rating</p>
                                        <p class="card-text">Description: @product.ItemDescription</p>
                                    </div>
                                </td>
                                <td style="width:25%; text-align:right; padding-right:1rem;">
                                    <a href="@Url.Action("Details", "Products", new { productId = product.Id })" class="btn btn-primary" style="background-color: #2d545e !important; color: white">Add to Cart</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            }
