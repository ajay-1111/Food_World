                </button>*@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end paddingright20px">
                    <ul class="navbar-nav mr-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {

                        }
                        else
                        {

                            <li class="nav-item">
